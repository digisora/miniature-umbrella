<% @places.each do |place| %>
  <div class="booyah-box col-xs-10 col-xs-offset-1">
    <h1><%= link_to place.name, place_path(place) %></h1><br />
    <i><%= place.address %></i><br /><br />
    <p><%= place.description %></p><br />

    <% if place.user.present? %>
      <small><%= place.user.email %></small>
    <% end %>

  <% if place.comments.present? %>
    <div class="col-xs-12">
      <blockquote>
        <% if last_comment(place).humanized_rating.present? %>
          <b><%= last_comment(place).humanized_rating %></b> -
        <% end %>
        <%= last_comment(place).message %>
        <small><%= last_comment(place).user.email %></small>
      </blockquote>
    </div>
  <% end %>

  </div>
<% end %>

<div class="col-xs-10 col-xs-offset-1"><%= will_paginate @places %></div>